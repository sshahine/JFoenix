<?xml version="1.0" encoding="UTF-8"?>

<?import com.cctintl.c3dfx.controls.C3DCheckBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import com.cctintl.c3dfx.controls.C3DComboBox?>
<?import javafx.collections.*?>
<?import de.jensd.fx.fontawesome.Icon?>

<StackPane fx:id="root" xmlns:fx="http://javafx.com/fxml/1"
	xmlns="http://javafx.com/javafx/2.2" style="-fx-padding:200 200;">
	<HBox spacing="100">
		<VBox spacing="20" >
			<children>
				<Label styleClass="title-label">Combo Box</Label>
				<C3DComboBox prefWidth="170" promptText="Select Item">
					<items>
						<FXCollections fx:factory="observableArrayList">
							<Label>
								Item 1
								<graphic>
									<Icon awesomeIcon="STAR" size="1.5em" style=";"
										styleClass="custom-c3d-list-view-icon" />
								</graphic>
							</Label>
							<Label>
								Item 2
								<graphic>
									<Icon awesomeIcon="HEART" size="1.5em" style=";"
										styleClass="custom-c3d-list-view-icon" />
								</graphic>
							</Label>
							<Label>
								Item 3
								<graphic>
									<Icon awesomeIcon="WARNING" size="1.5em" style=";"
										styleClass="custom-c3d-list-view-icon" />
								</graphic>
							</Label>
							<Label>
								Item 4
								<graphic>
									<Icon awesomeIcon="UNIVERSITY" size="1.5em" style=";"
										styleClass="custom-c3d-list-view-icon" />
								</graphic>
							</Label>
							<Label>
								Item 5
								<graphic>
									<Icon awesomeIcon="TABLET" size="1.5em" style=";"
										styleClass="custom-c3d-list-view-icon" />
								</graphic>
							</Label>
						</FXCollections>
					</items>
				</C3DComboBox>
			</children>
		</VBox>


		<VBox spacing="20">
			<Label styleClass="title-label">Editable Box</Label>
				<C3DComboBox editable="true" maxWidth="200" translateY="-6" promptText="Select/Edit Items">
					<items>
						<FXCollections fx:factory="observableArrayList">
							<Label>
								Item 1
								<graphic>
									<Icon awesomeIcon="STAR" size="1.5em" style=";"
										styleClass="custom-c3d-list-view-icon" />
								</graphic>
							</Label>
							<Label>
								Item 2
								<graphic>
									<Icon awesomeIcon="HEART" size="1.5em" style=";"
										styleClass="custom-c3d-list-view-icon" />
								</graphic>
							</Label>
							<Label>
								Item 3
								<graphic>
									<Icon awesomeIcon="WARNING" size="1.5em" style=";"
										styleClass="custom-c3d-list-view-icon" />
								</graphic>
							</Label>
							<Label>
								Item 4
								<graphic>
									<Icon awesomeIcon="UNIVERSITY" size="1.5em" style=";"
										styleClass="custom-c3d-list-view-icon" />
								</graphic>
							</Label>
							<Label>
								Item 5
								<graphic>
									<Icon awesomeIcon="TABLET" size="1.5em" style=";"
										styleClass="custom-c3d-list-view-icon" />
								</graphic>
							</Label>
						</FXCollections>
					</items>
				</C3DComboBox>
		</VBox>
	</HBox>

</StackPane>


